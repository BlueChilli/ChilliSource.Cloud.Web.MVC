<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461;net462;net472</TargetFrameworks>
    <DebugType>full</DebugType>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
    <GenerateAssemblyCopyRightAttribute>false</GenerateAssemblyCopyRightAttribute>
    <AssemblyName>ChilliSource.Cloud.Web.MVC</AssemblyName>
    <RootNamespace>ChilliSource.Cloud.Web.MVC</RootNamespace>
    <Description>Web.MVC library for ChilliSource.Cloud</Description>
    <Company>BlueChilli Technology Pty Ltd</Company>
    <SourceLinkUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Web.MVC/</SourceLinkUrl>
    <RepositoryUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Web.MVC</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Web.MVC/blob/master/LICENSE</PackageLicenseUrl>
    <Authors>BlueChilli Technology</Authors>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net461'">
    <DefineConstants>$(DefineConstants);NET_4X</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net462'">
    <DefineConstants>$(DefineConstants);NET_4X</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net472'">
    <DefineConstants>$(DefineConstants);NET_4X</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Condition="'$(TargetFramework)'!='netstandard2.0'" Include="..\CommonAssemblyInfo.cs" Link="Properties\CommonAssemblyInfo.cs" />
    <PackageReference Include="ChilliSource.Core.Extensions" Version="2.0.2" />
    <PackageReference Include="ChilliSource.Cloud.Web" Version="2.0.0-alpha0027" />    

    <PackageReference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="ImageResizer" Version="3.4.3" />
    <PackageReference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="Microsoft.AspNet.Mvc" Version="5.2.7" />
    <PackageReference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="Microsoft.AspNet.Razor" Version="3.2.7" />
    <PackageReference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="Microsoft.AspNet.WebPages" Version="3.2.7" />    
    <PackageReference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="Microsoft.Web.Infrastructure" Version="1.0.0.0" />
    
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.2" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="SixLabors.ImageSharp.Web" Version="1.0.0-beta0007" />    
  </ItemGroup>

  <ItemGroup>
    <Reference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="Microsoft.CSharp" />
    <Reference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="System.Configuration" />
    <Reference Condition="'$(TargetFramework)'!='netstandard2.0'" Include="System.Web" />
  </ItemGroup>

</Project>